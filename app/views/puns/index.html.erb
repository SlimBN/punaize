
<div id="puns-container">
    
    <% Pun.order('created_at DESC').each do |pun| %>
    <li>
        <div id="pun">
            <div class="image">
                <div class="overlay">
                    <div class="toplinks">
                        <a href="">
                            <div class="like">
                                <% if (current_user.likings.where("pun_id = ?", pun.id).count == 0) %>
                                    <%= link_to (image_tag "icons/pun/love.png"), likings_path(:liked => pun.id), :method => :post %>
                                <% else %>
                                    <%= link_to "Unfollow", liking_path(pun.likings), :method => :delete %>
                                <% end %>
                                <%= image_tag "icons/pun/love.png" %>
                            </div>                            
                        </a><a href="">
                            <div class="repun">
                                <%= image_tag "icons/pun/repun.png" %>
                            </div>                            
                        </a>

                    </div>

                    <div class="watch">
                        <%= link_to (image_tag "icons/pun/watch.png"), pun_path(pun) %>
                    </div>
                    
                    <% unless pun.price.nil? %>
                    <div class="bottomprice">
                        <%= pun.price %> <%= pun.currency.symbol %>
                    </div>
                    <% end %>
                    
                </div>
                <%= image_tag pun.image_url(:gridthumb).to_s %>
            </div>
            

            <div class="stats">
                <div class="first">
                    <%= image_tag "icons/love.png" %>
                    <div class="number">
                        <%= pun.likings.count %>
                    </div>
                </div>
                
                <div class="second">
                    <%= image_tag "icons/comment.png" %>
                    <div class="number">
                        80
                    </div>
                </div>
                
                <a href="#new_pun_modal" rel="modal:open">
                    <div class="third">
                        <%= image_tag "icons/punaise.png" %>
                        <div class="number">
                            80
                        </div>
                    </div>                    
                </a>

                
            </div>      

            <div class="description">
                <%= pun.description %>
            </div>

        </div>   
        <div class="user-avatar">
            <%= image_tag pun.user.avatar_url(:headerthumb).to_s %>
        </div>

        <div class="pinned-on">
            <div class="sur">
                Epingl√© sur:
            </div>
            <div class="board">
                Hammi Whmoumi
            </div>
        </div>
        <div class="clear"></div>

        <!-- originellement sur -->
        <div class="user-avatar">
            <%= image_tag pun.user.avatar_url(:headerthumb).to_s %>
        </div>

        <div class="pinned-on">
            <div class="sur">
                Originellement sur:
            </div>
            <div class="board">
                Hammi Whmoumi
            </div>
        </div>

    </li>

    <% end %>



</div>


<h1>Listing puns</h1>

<table>

<% @puns.each do |pun| %>
  <tr>
    <td><%= pun.title %></td>
    <td><%= pun.price %></td>
    <td><%= pun.description %></td>
    <td><%= link_to 'Show', pun %></td>
    <td><%= link_to 'Edit', edit_pun_path(pun) %></td>
    <td><%= link_to 'Destroy', pun, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />



<%= link_to 'New Pun', new_pun_path %>


  <script type="text/javascript">
    $(document).ready(new function() {
      // Prepare layout options.
      var options = {
        autoResize: true, // This will auto-update the layout when the browser window is resized.
        container: $('#puns-container'), // Optional, used for some extra CSS styling
        offset: 15, // Optional, the distance between grid items
        itemWidth: 240 // Optional, the width of a grid item
      };

      // Get a reference to your grid items.
      var handler = $('#puns-container li');

      // Call the layout function.
      handler.wookmark(options);

      $('#puns-container li').imagesLoaded(function() {
          // do stuff after images are loaded
          handler.wookmark(options);
        });



      $('#puns-container').trigger('refreshWookmark');

    });
  </script>

