
	<% Comment.where("pun_id = ?", @pun.id).order('created_at DESC').each do |comment| %>
		<div class="comment">
			<div class="time">
				<%= link_to comment.user.username, user_path(comment.user) %> il y'a <%= time_ago_in_words(comment.created_at) %>
			</div>
			<div class="user">
				<%= link_to (image_tag comment.user.avatar_url(:headerthumb).to_s), user_path(comment.user) %>
			</div>
			<div class="content">
				<%= comment.content %>
			</div>
			
		</div>
		
	<% end %>
