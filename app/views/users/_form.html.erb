

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <%= f.text_field :username %>
  </div>
  <div class="form">
    <%= f.file_field :avatar %>
  </div>
  <div class="form">
    <select id="user_country_id" name="user[country_id]" default='1'>
      <% Country.all.each do |country|  %>
        <option value="<%= country.id %>"><%= country.name %> </option>
      <% end %>
    </select>
  </div>
  <div class="form">
    <select id="user_state_id" name="user[state_id]" default="1">
      <% State.all.each do |state|  %>
        <option value="<%= state.id %>"><%= state.name %> </option>
      <% end %>
    </select>
  </div>

  <div class="actions">
    <%= f.submit "Suivant" %>
  </div>
<% end %>
